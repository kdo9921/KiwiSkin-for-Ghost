{{!< default}}

<article class="post-card">
    <div class="post-content">
        <h1 class="post-title">{{t "404 not found" }}</h1>
        <img src="{{asset 'images/404.jpg'}}">
        <h2 class="widget-title">{{t "Recent Posts"}}</h2>
        {{#get "posts" limit="5" include="tags" as |recents|}}
        {{#if recents}}
        <ul class="sidebar-recent">
            {{#foreach recents}}
            <li>
                <a class="post-title-link" href="{{url}}">{{title}}</a>
            </li>
            {{/foreach}}
        </ul>
        {{/if}}
        {{/get}}
    </div>
</article>